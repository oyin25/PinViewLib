<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:layout_weight="1">
		<TextView
			android:id="@+id/passcode_txt"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:padding="8dp"
			android:text="Enter New Passcode"
			android:textSize="20sp"
			android:textColor="#3F51B5" />
		<LinearLayout
			android:id="@+id/linearLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/pin1"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:padding="8dp"
				android:orientation="vertical" />
			<LinearLayout
				android:id="@+id/pin2"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:padding="8dp"
				android:orientation="vertical" />
			<LinearLayout
				android:id="@+id/pin3"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_marginRight="10dp"
				android:padding="8dp"
				android:orientation="vertical" />
			<LinearLayout
				android:id="@+id/pin4"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:padding="8dp"
				android:orientation="vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/indicator"
			android:layout_width="220dp"
			android:layout_height="2dp"
			android:layout_marginTop="40dp"
			android:layout_marginBottom="40dp"
			android:padding="8dp"
			android:background="#E0E0E0"
			android:orientation="horizontal" />
		<GridLayout
			android:id="@+id/keypad_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:rowCount="4"
			android:columnCount="3"
			android:alignmentMode="alignMargins"
			android:rowOrderPreserved="false"
			android:useDefaultMargins="true">
			<TextView
				android:id="@+id/num_1"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="1"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_2"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="2"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_3"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="3"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_4"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="4"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_5"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="5"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_6"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="6"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_7"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="7"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_8"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="8"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/num_9"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="9"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<LinearLayout
				android:id="@+id/reset_lin"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#3F51B5"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/reset_img"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_cached_white"
					android:scaleType="center" />
			</LinearLayout>
			<TextView
				android:id="@+id/num_0"
				android:focusable="false"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:gravity="center_horizontal|center_vertical"
				android:text="0"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<LinearLayout
				android:id="@+id/backspace_lin"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:padding="8dp"
				android:background="#3F51B5"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/backspace_img"
					android:focusable="false"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:src="@drawable/ion_backspace"
					android:scaleType="centerInside" />
			</LinearLayout>
		</GridLayout>
	</LinearLayout>
</LinearLayout>
